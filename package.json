{
  "name": "hls-downloader",
  "version": "1.0.0",
  "description": "Simple HLS video downloader with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.hlsdownloader",
    "productName": "HLS Downloader",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0"
  }
}
